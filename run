#!/usr/bin/env bash
#
# usage: ./run command [argument ...]
#
# Commands used during development / CI.
#
# See https://death.andgravity.com/run-sh
# for an explanation of how it works and why it's useful.

# First, set up the environment.
# (Check the notes at the end when changing this.)

set -o nounset
set -o pipefail
set -o errexit

# Enable this to echo commands as they are executed.
#set -o xtrace

# Change the current directory to the project root.
PROJECT_ROOT=${0%/*}
if [[ $0 != $PROJECT_ROOT && $PROJECT_ROOT != "" ]]; then
  cd "$PROJECT_ROOT"
fi
readonly PROJECT_ROOT=$(pwd)

# Store the absolute path to this script (useful for recursion).
readonly SCRIPT="$PROJECT_ROOT/$(basename "$0")"

################################################################################
# Setup Commands

function dev:setup {
  #@ Install development dependencies
  #@ Category: Development
  echo "üì¶ Installing dependencies..."
  if command -v uv &> /dev/null; then
    uv pip install -e .[dev]
  else
    pip install -e .[dev]
  fi
  echo "‚úÖ Setup complete"
}

function dev:clean {
  #@ Clean build artifacts and cache
  #@ Category: Development
  echo "üßπ Cleaning..."
  rm -rf build/ dist/ *.egg-info
  rm -rf .pytest_cache .ruff_cache .mypy_cache htmlcov/
  rm -rf debian/.debhelper debian/container-packaging-tools debian/files debian/*.substvars
  rm -f ../*.deb ../*.buildinfo ../*.changes
  find . -type d -name __pycache__ -exec rm -rf {} + 2>/dev/null || true
  find . -type f -name "*.pyc" -delete
  echo "‚úÖ Cleaned"
}

################################################################################
# Test Commands

function test {
  #@ Run all tests
  #@ Category: Testing
  echo "üß™ Running all tests..."
  pytest
}

function test:unit {
  #@ Run unit tests only
  #@ Category: Testing
  echo "üß™ Running unit tests..."
  pytest tests/test_*.py -k "not integration"
}

function test:integration {
  #@ Run integration tests only
  #@ Category: Testing
  echo "üß™ Running integration tests..."
  pytest tests/test_integration*.py
}

function test:coverage {
  #@ Run tests with coverage report
  #@ Category: Testing
  echo "üß™ Running tests with coverage..."
  pytest --cov=src --cov-report=term-missing --cov-report=html
  echo "‚úÖ Coverage report generated in htmlcov/"
}

################################################################################
# Code Quality Commands

function lint {
  #@ Run linter (ruff check)
  #@ Category: Quality
  echo "üîç Running linter..."
  ruff check src/ tests/
  echo "‚úÖ Lint passed"
}

function format {
  #@ Format code (ruff format)
  #@ Category: Quality
  echo "‚ú® Formatting code..."
  ruff format src/ tests/
  echo "‚úÖ Code formatted"
}

function format:check {
  #@ Check formatting without changes
  #@ Category: Quality
  echo "üîç Checking code formatting..."
  ruff format --check src/ tests/
  echo "‚úÖ Format check passed"
}

function typecheck {
  #@ Run type checker (ty or mypy)
  #@ Category: Quality
  echo "üîç Type checking..."
  if command -v uvx &> /dev/null; then
    uvx ty check
  elif command -v mypy &> /dev/null; then
    echo "‚ö†Ô∏è  ty not available, falling back to mypy"
    mypy src/
  else
    echo "‚ùå Neither ty nor mypy installed"
    echo "Install with: uv tool install ty or pip install mypy"
    return 1
  fi
  echo "‚úÖ Type check passed"
}

function check {
  #@ Run all quality checks (lint, format, typecheck)
  #@ Category: Quality
  echo "üîç Running all quality checks..."
  lint
  format:check
  typecheck
  echo "‚úÖ All checks passed"
}

################################################################################
# Build Commands

function build {
  #@ Build Debian package
  #@ Category: Build
  echo "üèóÔ∏è  Building Debian package..."
  dpkg-buildpackage -us -uc
  echo "‚úÖ Build complete"
}

################################################################################
# Git Commands

function git:status {
  #@ Show git status
  #@ Category: Git
  git status
}

################################################################################
# Help System

function help {
  #@ Show this help message
  #@ Category: Core
  echo "Available commands:"
  echo ""

  # Extract function definitions and their help comments
  awk '/^function / {
    fname = $2
    sub(/[({].*/, "", fname)
    getline
    if ($0 ~ /#@/) {
      desc = $0
      sub(/.*#@ /, "", desc)
      sub(/ *$/, "", desc)
      getline
      if ($0 ~ /#@ Category:/) {
        cat = $0
        sub(/.*Category: /, "", cat)
        sub(/ *$/, "", cat)
        if (!seen[cat]++) categories[++cat_count] = cat
        commands[cat, ++cmd_count[cat]] = fname
        descriptions[cat, cmd_count[cat]] = desc
      }
    }
  }
  END {
    for (i = 1; i <= cat_count; i++) {
      cat = categories[i]
      print "\n" cat ":"
      for (j = 1; j <= cmd_count[cat]; j++) {
        printf "  %-30s %s\n", commands[cat, j], descriptions[cat, j]
      }
    }
  }' "$0"

  echo ""
  echo "Usage: ./run <command> [arguments...]"
}

################################################################################
# Commands end.

# Dispatch to command. A simpler version would be just "$@" (with the quotes!).

TIMEFORMAT=$'\nTask completed in %3lR'
time "${@:-help}"

# Some dev notes for this script.
#
# The commands *require*:
#
# * The current working directory is the project root.
# * The shell options and globals are set as they are.
#
# Inspired by the following:
#  - https://death.andgravity.com/run-sh
#  - http://www.oilshell.org/blog/2020/02/good-parts-sketch.html
